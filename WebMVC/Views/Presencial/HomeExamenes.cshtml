@model WebMVC.Models.AtencionViewModel
@using Microsoft.Extensions.Configuration
@inject IConfiguration Configuration
@{
    ViewData["Title"] = "Paciente";
    Layout = "_LayoutHome";

}

@section Styles  {
    <link href="~/css/Home/index.css?rnd=@NumeroRandom.GetRandom()" rel="stylesheet" type="text/css" />
    <link href="~/css/Medismart/main.css?rnd=@NumeroRandom.GetRandom()" rel="stylesheet" type="text/css" />
}


<div class="cont-home">
    <div class="kt-grid kt-grid--desktop kt-grid--ver kt-grid--ver-desktop kt-app">
        <!--Nuevo Home-->

        <div class="container">

            <div class="row">
                <div class="col">
                    <div class="top-banner justify-content-between">
                        <h1 class="legend order-2 order-md-1">BCF Exámenes Presenciales</h1>
                        <img src="~/img/doctor-circle.png" alt="image" class="rounded-circle order-1 order-md-2">
                    </div>
                </div>
            </div>

            <div class="row">

                @if (ViewBag.HostURL.ToString().Contains("bcf-corona."))
                {
                    <div class="col-6 col-md-4 col-lg-3 p-0">
                        <a href="/Presencial/ServicioExamen?servicio=imagenologia">

                            <div class="cont-card">
                                <div class="card">
                                    <div class="card-body">
                                        <img src="~/img/abc/bcf-medica-presencial/svg/examen-imagenologia.svg" alt="">

                                    </div>
                                </div>
                                <h1>
                                    BCF EXÁMENES IMAGENOLOGÍA
                                </h1>
                            </div>
                        </a>

                    </div>
                } else
                {
                    <div class="col-6 col-md-4 col-lg-3 p-0">
                        <a href="/Presencial/ServicioExamen?servicio=electro_cardiograma">

                            <div class="cont-card">
                                <div class="card card-plan">
                                    <div class="card-body">
                                        <img src="~/img/abc/bcf-medica-presencial/svg/examen-cardiologia.svg" alt="">
                                    </div>
                                </div>
                                <h1>
                                    BCF EXAMEN CARDIOLOGÍA
                                </h1>
                            </div>
                        </a>

                    </div>
                    <div class="col-6 col-md-4 col-lg-3 p-0">
                        <a href="/Presencial/ServicioExamen?servicio=otorrinolaringologia">

                            <div class="cont-card">
                                <div class="card card-plan">
                                    <div class="card-body">
                                        <img src="~/img/abc/bcf-medica-presencial/svg/examen-otorrino.svg" alt="">

                                    </div>
                                </div>
                                <h1>
                                    BCF EXAMEN OTORRINOLARINGOLOGÍA
                                </h1>
                            </div>
                        </a>

                    </div>
                    <div class="col-6 col-md-4 col-lg-3 p-0">
                        <a href="/Presencial/ServicioExamen?servicio=examen_cuello_uterino">

                            <div class="cont-card">
                                <div class="card">
                                    <div class="card-body">
                                        <img src="~/img/abc/bcf-medica-presencial/svg/examen-oncologico.svg" alt="">
                                    </div>
                                </div>
                                <h1>
                                    BCF EXAMEN ONCOLÓGICO PREVENTIVO
                                </h1>
                            </div>
                        </a>

                    </div>
                    <div class="col-6 col-md-4 col-lg-3 p-0">
                        <a href="/Presencial/ServicioExamen?servicio=ecotomografia">

                            <div class="cont-card">
                                <div class="card">
                                    <div class="card-body">
                                        <img src="~/img/abc/bcf-medica-presencial/svg/examen-ecotomografia.svg" alt="">
                                    </div>
                                </div>
                                <h1>
                                    BCF EXÁMENES MATERNIDAD Y EMBARAZO
                                </h1>
                            </div>
                        </a>

                    </div>
                    <div class="col-6 col-md-4 col-lg-3 p-0">
                        <a href="/Presencial/ServicioExamen?servicio=imagenologia">

                            <div class="cont-card">
                                <div class="card">
                                    <div class="card-body">
                                        <img src="~/img/abc/bcf-medica-presencial/svg/examen-imagenologia.svg" alt="">

                                    </div>
                                </div>
                                <h1>
                                    BCF EXÁMENES IMAGENOLOGÍA
                                </h1>
                            </div>
                        </a>

                    </div>
                }
                

            </div>
        </div>
    </div>
</div>
<script src="https://cdn.jsdelivr.net/gh/bigdatacloudapi/js-api-client@latest/bigdatacloud_api_client.min.js" type="text/javascript"></script>

<script src="https://cdn.jsdelivr.net/gh/bigdatacloudapi/js-client-ip-client@latest/bigdatacloud_client_ip.min.js" type="text/javascript"></script>
<!--Modal Wellness-->
@section Scripts {

    <script src="~/signal/signalr.min.js"></script>
   
    <script type="text/javascript">
        (function () {
            var uid = @ViewBag.uid;
            window.uid = uid;
        @*var idCliente = @ViewBag.IdClientePlataforma;
            window.idCliente = idCliente;*@
            })()
    </script>
    <!-- Global site tag (gtag.js) - Google Analytics -->
                }

<!--end: Modal Orientación-->
