
@{
    ViewData["Title"] = "InformeAtenciones";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";

}

@section PageStyles  {
    <link href="~/metronic_demo7/assets/plugins/custom/fullcalendar/fullcalendar.bundle.css?rnd=@NumeroRandom.GetRandom()" rel="stylesheet" type="text/css" />
}

@section Styles  {
    <link href="~/css/Home/index.css?rnd=@NumeroRandom.GetRandom()" rel="stylesheet" type="text/css" />
    <style>
        /*#tableProximasAtenciones .kt-datatable__cell > span{
            width:150px !important;
        }*/

    </style>
}
<div class="kt-container  kt-container--fluid  kt-grid__item kt-grid__item--fluid">
    @*<div class="alert alert-light alert-elevate" role="alert">
            <div class="alert-icon"><i class="flaticon-warning kt-font-brand"></i></div>
            <div class="alert-text">
                Datatable initialized from remote JSON source with local(frontend) pagination, column order and search support.
            </div>
        </div>*@
    <div class="kt-portlet kt-portlet--mobile">
        <div class="kt-portlet__head kt-portlet__head--lg">
            <div class="kt-portlet__head-label">
                <span class="kt-portlet__head-icon">
                    <i class="kt-font-brand flaticon2-user"></i>
                </span>
                <h3 class="kt-portlet__head-title">
                    Informe Atenciones
                </h3>
            </div>

        </div>

        <div class="kt-portlet__body">
            <!--begin: Search Form -->
            <div class="kt-form kt-form--label-right kt-margin-t-20 kt-margin-b-10">
                <div class="row align-items-center">
                    <div class="col-xl-12 order-2 order-xl-1">
                        <div class="row align-items-center">
                            <div class="col-md-6 kt-margin-b-20-tablet-and-mobile">
                                <div class="kt-form__group kt-form__group--inline">

                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="col-xl-12 order-2 order-xl-1">
                        <div class="row align-items-center mt-4">
                            <div class="col-md-3 kt-margin-b-20-tablet-and-mobile">
                                <div class="kt-input-icon kt-input-icon--left">
                                    <input type="text" class="form-control" placeholder="Busca por Nombre o Cedula de Indentidad o Correo (ingresar mínimo 3 caracteres)" id="generalSearch">
                                        <span class="kt-input-icon__icon kt-input-icon__icon--left">
                                        <span><i class="la la-search"></i></span>
                                    </span>
                                </div>

                            </div>
                             <div class="form-group row mb-2">
                                <label class="col-xl-3 col-lg-3 col-form-label">Fecha Inicio</label>
                                <div class="col-lg-8 col-xl-8 validate">
                                    <div class="input-group">
                                        <div class="input-group-prepend"><span class="input-group-text"><i class="la la-calendar"></i></span></div>
                                        <input class="form-control datepicker" id="fechaInicio" name="fechaInicio" type="text" value="" />
                                    </div>
                                </div>

                            </div>
                            <div class="form-group row mb-2">
                                <label class="col-xl-3 col-lg-3 col-form-label">Fecha Fin</label>
                                <div class="col-lg-8 col-xl-8 validate">
                                    <div class="input-group">
                                        <div class="input-group-prepend"><span class="input-group-text"><i class="la la-calendar"></i></span></div>
                                        <input class="form-control datepicker" id="fechaFin" name="fechaFin" type="text" value="" />
                                    </div>
                                </div>
                            </div>

                            <div class="col-md-1 kt-margin-b-20-tablet-and-mobile">

                                <a href="#" class="btn btn-brand btn-elevate btn-icon-sm pull-right" id="buscar" style="width: 90%">
                                    <i class="la la-search"></i>
                                    Buscar
                                </a>

                            </div>
                        </div>
                    </div>

                </div>
            </div>

            <!--end: Search Form -->
        </div>
        <div class="kt-portlet__body kt-portlet__body--fit">

            <!--begin: Datatable -->
            <div class="kt-datatable" id="json_data"></div>

            <!--end: Datatable -->
        </div>
    </div>

</div>

<!-- end:: Page -->
<!-- begin::Scrolltop -->
<div id="kt_scrolltop" class="kt-scrolltop">
    <i class="fa fa-arrow-up"></i>
</div>

<!--<button onclick="playAudio()" type="button">Play Audio</button>
<button onclick="pauseAudio()" type="button">Pause Audio</button>-->

<audio id="myAudio">
    <source src="~/metronic_demo7/assets/media/demo/sonido.mp3" type="audio/mpeg">
    Your browser does not support the audio element.
</audio>

@section PageScripts {
    <script src="~/metronic_demo7/assets/plugins/custom/fullcalendar/fullcalendar.bundle.js?rnd=@NumeroRandom.GetRandom()" type="text/javascript"></script>
    <script src="~/signal/signalr.min.js"></script>
    <script src="~/metronic_demo7/assets/js/pages/crud/forms/widgets/bootstrap-datepicker.js?rnd=@NumeroRandom.GetRandom()" type="text/javascript"></script>

}

@section Scripts {
    <script>
        var x = document.getElementById("myAudio");

        function playAudio() {
            x.play();
        }

        function pauseAudio() {
            x.pause();
        }
    </script>
    <script type="module">
        import { init } from '../../js/Admin/informeAtenciones.js?rnd=@NumeroRandom.GetRandom()';
        init(@Html.Raw(Json.Serialize(Model)), '@Html.Raw(Url.Action("EditPaciente"))')
    </script>
    <script type="text/javascript">
        (function () {
            var uid = @ViewBag.uid;
            window.uid = uid;
            var idEmpresa = parseInt(@ViewBag.idEmpresa);
            window.idEmpresa = idEmpresa;
        })()

         $(".datepicker").datepicker({
            format: "yyyy-mm-dd",
          });
    </script>
}

