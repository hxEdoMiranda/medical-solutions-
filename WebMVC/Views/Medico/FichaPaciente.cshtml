@model WebMVC.Models.Paciente


@{
    ViewData["Title"] = "Ficha";
    Layout = "_Layout";
    
}

        <div class="kt-container  kt-container--fluid  kt-grid__item kt-grid__item--fluid">

            <!--Begin::App-->
            <div class="kt-grid kt-grid--desktop kt-grid--ver kt-grid--ver-desktop kt-app">

                <!--Begin:: App Aside Mobile Toggle-->
                <button class="kt-app__aside-close" id="kt_user_profile_aside_close">
                    <i class="la la-close"></i>
                </button>
                <!--End:: App Aside Mobile Toggle-->

                <div class="col-xl-5">
                    <!--Begin:: App Aside-->
                    <!--begin:: Widgets/Applications/User/Profile1-->
                    <div class="kt-portlet kt-portlet--height-fluid-">
                        <form id="ficha">
                            <div class="kt-portlet__head">
                                <div class="kt-portlet__head-label">
                                    <h3 class="kt-portlet__head-title">
                                        <label id="nombreCompleto"></label>
                                    </h3>
                                </div>

                            </div>
                            <div class="kt-portlet__body kt-portlet__body--fit-y">

                                <!--begin::Widget -->
                                <div class="kt-widget kt-widget--user-profile-1">
                                    <div class="kt-widget__body">
                                        <div class="kt-widget__content">
                                            <div class="kt-widget__info">
                                                <span class="kt-widget__label">Rut:</span>
                                                <label class="kt-widget__data" id="identificador"></label>
                                            </div>

                                            <div class="kt-widget__info">
                                                <span class="kt-widget__label">Genero:</span>
                                                <label class="kt-widget__data" id="genero"></label>
                                            </div>
                                            <div class="kt-widget__info">
                                                <span class="kt-widget__label">Fecha nacimiento:</span>
                                                <label class="kt-widget__data" id="fNacimiento"></label>
                                            </div>

                                            @*<div class="kt-widget__info">
                                                <span class="kt-widget__label">Altura (CM):</span>
                                                <label class="kt-widget__data" id="altura"></label>
                                            </div>*@
                                            @*<div class="kt-widget__info">
                                                <span class="kt-widget__label">Peso (KG):</span>
                                                <label class="kt-widget__data" id="peso"></label>
                                            </div>*@
                                            @*<div class="kt-widget__info">
                                                <span class="kt-widget__label">Alergias:</span>
                                                <label class="kt-widget__data" id="alergias"></label>
                                            </div>*@
                                            <div class="kt-widget__info">
                                                <span class="kt-widget__label">Teléfono:</span>
                                                <label class="kt-widget__data" id="telefono"></label>
                                            </div>

                                            <div class="kt-widget__info">
                                                <span class="kt-widget__label">Correo:</span>
                                                <label class="kt-widget__data" id="correo"></label>
                                            </div>

                                            <div class="kt-widget__info">
                                                <span class="kt-widget__label">Empresa/Cliente al que pertenece:</span>
                                                <label class="kt-widget__data" id="empresa"></label>
                                            </div>
                                        </div>
                                    </div>
                                </div>

                                <!--end::Widget -->
                            </div>
                        </form>
                    </div>
                    <!--end:: Widgets/Applications/User/Profile1-->
                    <!--End:: App Aside-->
                </div>

                <div class="col-xl-7">
                    <!--Begin:: App Content-->
                    <div class="kt-grid__item kt-grid__item--fluid kt-app__content">
                        <div class="row">

                            <!--begin:: Widgets/Tasks -->
                            <div class="kt-portlet kt-portlet--tabs kt-portlet--height-fluid">
                                <div class="kt-portlet__head">
                                    <div class="kt-portlet__head-label">
                                        <h3 class="kt-portlet__head-title">
                                            Atenciones
                                        </h3>
                                    </div>

                                </div>
                                <div class="kt-portlet__body">
                                    <div id="pnlHistorial" class="align-self-center" style="display:none">
                                        <div class="row">
                                            <div class="col-lg-12 kt-align-center">
                                                <img src="~/metronic_demo7/assets/media/sinResultado.PNG" />
                                            </div>
                                        </div>
                                        <div class="row">
                                            <div class="col-lg-12">
                                                <h5>No hay atenciones realizadas</h5>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="tab-content">
                                        <div class="tab-pane active" id="kt_widget2_tab1_content">
                                            @foreach (var historialAtencion in Model.HistorialAtenciones)
                                            {
                                                <div class="kt-widget2">
                                                    <div class="kt-widget2__item kt-widget2__item--primary">
                                                        <div class="kt-widget2__checkbox">
                                                            <label>
                                                                <span></span>
                                                            </label>
                                                        </div>
                                                        <div class="kt-widget2__info">
                                                            <a href="#" class="kt-widget2__title">
                                                                @historialAtencion.FechaText Dr/a : @historialAtencion.NombreMedico - @historialAtencion.Especialidad
                                                            </a>
                                                            <a href="#" class="kt-widget2__username">
                                                                @historialAtencion.DiagnosticoMedico
                                                            </a>
                                                            <a href="#" class="kt-widget2__username">
                                                                @historialAtencion.PatologiasString
                                                            </a>
                                                        </div>
                                                        <div class="kt-widget2__actions">
                                                            <a href="/Medico/InformeAtencion?idAtencion=@historialAtencion.Id" type="button" class="btn btn-label-brand btn-bold btn-sm">Ver Informe</a>
                                                        </div>
                                                    </div>
                                                </div>
                                            }



                                        </div>
                                    </div>
                                </div>
                            </div>

                            <!--end:: Widgets/Tasks -->

                        </div>
                    </div>

                    <!--End:: App Content-->
                </div>
            </div>

            <!--End::App-->
        </div>

        <!-- end:: Content -->



<div id="kt_scrolltop" class="kt-scrolltop">
    <i class="fa fa-arrow-up"></i>
</div>

<!-- end::Scrolltop -->
