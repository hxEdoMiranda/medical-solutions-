        (function () {

            var uid = @ViewBag.uid;

            window.uid = uid;
             var idEdit = @ViewBag.idEdit;
                window.idEdit = idEdit;
             var idCliente = '@ViewBag.idCliente';
            window.idCliente = idCliente;

        })()
    </script>
}