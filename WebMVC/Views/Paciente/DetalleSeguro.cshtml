                     </div>


                </div>
                <div class="col-md-4">
                    <div class="card-medicina-preventiva">
                        <div class="icono-recomendacion">
                            <div class="icono">
                                <img src="/img/sekure/home/iconos/chat.svg" />
                            </div>
                            <h4>
                                Contacto
                            </h4>
                        </div>
                        <div class="mt-5">
                            <a href="tel:6017562323" target="_blank"><img src="/img/sekure/home/iconos/fono.svg" /><span class="ml-3">Via Telefónica</span> </a>
                        </div>
                        <div class="mt-5">
                            <a href="mailto:indemnizacionesco@palig.com" target="_blank"><i class="fal fa-envelope fa-3x"></i> <span class="ml-3">Vía Email</span></a>
                        </div>
                    </div>


                </div>
            </div>
        </div>
    </div>
    <div class="kt-grid kt-grid_sc kt-grid--desktop kt-grid--ver kt-grid--ver-desktop kt-app">

        <!--Begin:: App Aside Mobile Toggle-->
        <button class="kt-app__aside-close" id="kt_user_profile_aside_close">
            <i class="la la-close"></i>
        </button>
        <!--End:: App Aside Mobile Toggle-->

       

       

    </div>
    <div class="accesible-tools-desktop d-none">
        <div class="accesible-btn">
            <button id="increase-font-desk">A+</button>
            <button id="normal-font-desk">A</button>
            <button id="decrease-font-desk">A-</button>
        </div>
    </div>
    <!--End::App-->
</div>


