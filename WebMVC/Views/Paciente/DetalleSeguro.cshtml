                            <div class="icono">
                                <img src="/img/sekure/home/iconos/escudo.svg" />
                            </div>
                            <h4>
                                Certificado
                            </h4>
                        </div>
                       
                        <div class="mt-5">
                               <a href="@Model.seguroContratado.UrlCertificado" target="_blank"><img src="/img/sekure/home/iconos/descargar-certificado.svg" /></a>
