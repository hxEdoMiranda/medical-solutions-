                <div class="container-fluid container-login">
                    <div class="row d-flex ">
                        <div class="col-md-6 bkg-login d-none d-md-block">
                            <div id="imgLogin" class="imgLogin"></div>
                            <!--<img alt="Medismart.live" src="~/img/login6.png" id="imgLogin" />-->
                            <!--<img src="~/img/login4.jpg" alt="Medismart.live"/>-->
                        </div>
                        <div class="col col-md-6">
                            <div class="kt-login__wrapper">
                                <div class="kt-login__container fletcher_login">
                                    <div class="kt-login__logo mb-0 d-none d-md-block">
                                        <a href="#" class="px-0 logotipo-img logotipo-desktop">
                                            <!--<img alt="Logo" class="logotipo" src="~/img/logotipo.png" />-->
                                        </a>
                                    </div>
                                    <div class="kt-login__signin">
                                        <div class="kt-login__head">
                                            <h3 class="kt-login__title">Ingreso de Usuario</h3>
                                        </div>
                                        <form class="kt-form" asp-controller="Account" asp-action="LoginPositiva" method="post" role="form">

                                            <div class="form-group" id="loginTipo">
                                                <label class="d-block ms-label fuente-accesible clave-escritorio">Tipo Documento</label>
                                                <label class="clave-mobile">Tipo Documento</label>
                                                <select class="form-control positiva-select" aria-label="Tipo Documento" asp-for="Tipo">
                                                    <option selected>Seleccion un Tipo de Documento</option>
                                                    <option value="CC">Cedula de ciudadania</option>
                                                    <option value="CE">Cedula de extranjeria</option>
                                                    <option value="CD">Carnet diplomatico</option>
                                                    <option value="TI">Tarjeta de identidad</option>
                                                    <option value="PA">Pasaporte</option>
                                                    <option value="PE">Permiso especial de trabajo</option>
                                                    <option value="PT">Permiso de proteccion</option>
                                                    <option value="NI">NIT</option>
                                                </select>
                                            </div>
                                            <div class="form-group mb-3" id="loginUsername">
                                                <label class="d-block ms-label fuente-accesible" id="labelIdentificador">
                                                    N° Documento
                                                    <span class="login-info--tooltip positiva-login--info-user" data-toggle="tooltip" data-html="true" title="Ingresa tu número de documento sin puntos ni caracteres especiales."
                                                          data-placement="right">
                                                        <i class="fa fa-question-circle" aria-hidden="true"></i>
                                                    </span>
                                                </label>

                                                <label class="dcto-mobile">N° Documento</label>
                                                <input class="form-control" type="text" id="kt_rut" placeholder="111111111" autocomplete="off" asp-for="Credencial">
                                            </div>
                                            <div class="form-group mb-3" id="loginCorreo" hidden>
                                                <label class="d-block ms-label fuente-accesible" id="labelIdentificador">Correo electronico<img alt="" class="interrogacion" src="~/img/positiva/interrogacion.svg" /></label>
                                                <label class="dcto-mobile">Correo electronico</label>
                                                <input class="form-control" type="email" id="kt_email" placeholder="usuario@ejemplo.com" autocomplete="off" asp-for="Correo">
                                            </div>
                                            <div class="form-group mb-3" id="loginNombre" hidden>
                                                <label class="d-block ms-label fuente-accesible" id="labelIdentificador">Nombre<img alt="" class="interrogacion" src="~/img/positiva/interrogacion.svg" /></label>
                                                <label class="dcto-mobile">Nombre</label>
                                                <input class="form-control" type="text" id="kt_nombre" placeholder="escribe tu nombre" autocomplete="off" asp-for="Nombre">
                                            </div>
                                            <div class="form-group mb-3" id="loginApellido" hidden>
                                                <label class="d-block ms-label fuente-accesible" id="labelIdentificador">Apellido<img alt="" class="interrogacion" src="~/img/positiva/interrogacion.svg" /></label>
                                                <label class="dcto-mobile">Apellido</label>
                                                <input class="form-control" type="text" id="kt_apellido" placeholder="escribe tu apellido" autocomplete="off" asp-for="Apellido">
                                            </div>
                                            <input hidden name="rol" value="@Roles.Paciente" />
                                            <input hidden name="returnUrl" value="@ViewData[" ReturnUrl"]" />
                                            <input type="text" hidden name="loginVerify" id="loginVerify" value="false" />

                                            <div class="row kt-login__extra_02 align-items-center mt-0">
                                                <div class="col-12">
                                                    <div class="kt-login__actions mt-2">
                                                        @*<button type="submit" class="btn btn-default">Log in</button>*@
